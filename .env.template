# Wholesale AI Agent Environment Configuration Template
# Copy this file to .env and fill in your values

# =============================================================================
# ENVIRONMENT SETTINGS
# =============================================================================
ENVIRONMENT=development
DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# SQLite (default for development)
DATABASE_URL=sqlite:///wholesale_agent.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/wholesale_agent

# MySQL (alternative)
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/wholesale_agent

# Database connection pool settings
DB_ECHO=false
DB_POOL_SIZE=5
DB_MAX_OVERFLOW=10
DB_POOL_TIMEOUT=30

# =============================================================================
# LLM (AI MODEL) CONFIGURATION
# =============================================================================

# OpenAI Configuration (recommended)
LLM_PROVIDER=openai
LLM_API_KEY=your_openai_api_key_here
LLM_MODEL=gpt-3.5-turbo
# LLM_MODEL=gpt-4  # More capable but more expensive

# Anthropic Claude Configuration (alternative)
# LLM_PROVIDER=anthropic
# LLM_API_KEY=your_anthropic_api_key_here
# LLM_MODEL=claude-3-sonnet-20240229

# Local Model Configuration (e.g., Ollama)
# LLM_PROVIDER=local
# LLM_BASE_URL=http://localhost:11434/api/generate
# LLM_MODEL=llama2
# LLM_API_KEY=  # Not needed for local models

# LLM Request Settings
LLM_MAX_TOKENS=1000
LLM_TEMPERATURE=0.7
LLM_TIMEOUT=30

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
# LOG_LEVEL=DEBUG  # Use for development/troubleshooting
# LOG_LEVEL=WARNING  # Use for production to reduce log volume

LOG_DIR=logs
LOG_STRUCTURED=false  # Set to true for JSON structured logs in production
LOG_FILE_ROTATION_MB=10
LOG_BACKUP_COUNT=5

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
# Required for production - generate a secure random key
SECRET_KEY=your_secret_key_here_minimum_32_characters_long

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Rate limiting
RATE_LIMIT_PER_MINUTE=60
SESSION_TIMEOUT_MINUTES=60

# =============================================================================
# PERFORMANCE SETTINGS
# =============================================================================
# Query processing
QUERY_TIMEOUT=30
MAX_CONCURRENT_QUERIES=10

# Caching
CACHE_ENABLED=true
CACHE_TTL_SECONDS=300

# Monitoring
ENABLE_METRICS=true
PROMETHEUS_PORT=9090

# =============================================================================
# REDIS CONFIGURATION (optional, for caching and sessions)
# =============================================================================
# REDIS_URL=redis://localhost:6379/0
# REDIS_PASSWORD=your_redis_password

# =============================================================================
# MONITORING AND OBSERVABILITY (optional)
# =============================================================================
# Structured logging for production
# STRUCTURED_LOGGING=true

# External monitoring services
# SENTRY_DSN=your_sentry_dsn_for_error_tracking
# DATADOG_API_KEY=your_datadog_api_key

# =============================================================================
# DEVELOPMENT SETTINGS
# =============================================================================
# Set to true to enable development features
# DEVELOPMENT_MODE=true

# Mock data generation settings
MOCK_DATA_CATEGORIES=10
MOCK_DATA_SUPPLIERS=15
MOCK_DATA_PRODUCTS_PER_CATEGORY=25
MOCK_DATA_MOVEMENTS=200

